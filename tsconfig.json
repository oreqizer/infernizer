{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "types/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
