{
  "name": "infernizer",
  "version": "0.0.0",
  "description": "The ultimate inferno boilerplate!",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run build:server && run-p run run:dev",
    "test": "npm test",
    "run": "node dist/server",
    "run:dev": "webpack-dev-server --config webpack.dev.js --inline --hot",
    "bundle": "npm run clean && npm run build:server && npm run build:client",
    "bundle:min": "npm run clean && npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:server": "webpack --config webpack.server.js && npm run clean:server",
    "build:client": "webpack",
    "clean": "rimraf .tmp dist",
    "clean:server": "rimraf dist/server/index.css"
  },
  "keywords": [
    "inferno",
    "webpack",
    "isomorphic",
    "universal",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "@types/koa": "^2.0.37",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.21",
    "@types/koa-static": "^2.0.22",
    "@types/node": "^6.0.58",
    "inferno": "^1.1.1",
    "inferno-server": "^1.1.1",
    "koa": "^2.0.0",
    "koa-logger": "2",
    "koa-router": "^7.1.0",
    "koa-static": "3",
    "normalize.css": "^5.0.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-inferno": "^1.5.0",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babili": "^0.0.9",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "npm-run-all": "^4.0.0",
    "postcss-loader": "^1.2.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "webpack": "2.2.0-rc.3",
    "webpack-dev-server": "2.2.0-rc.0"
  }
}
