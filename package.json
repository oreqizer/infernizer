{
  "name": "reactizer",
  "version": "0.0.0",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run clean && npm run build:server && run-p run run:dev",
    "run": "NODE_ENV=production node dist/server",
    "run:dev": "webpack-dev-server --config etc/webpack.dev.js --inline --hot",
    "bundle": "npm run clean && npm run build:server && npm run build:client",
    "bundle:min": "npm run clean && npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:server": "webpack --config etc/webpack.server.js && npm run clean:server",
    "build:client": "webpack --config etc/webpack.build.js",
    "test": "echo 'TODO: add Jest + enzyme'",
    "lint": "eslint '**/*.{js,jsx}'",
    "flow": "flow",
    "flow:check": "flow check",
    "flow:install": "flow-typed install",
    "clean": "rimraf .tmp dist",
    "clean:server": "rimraf dist/server/index.css"
  },
  "keywords": [
    "react",
    "webpack",
    "isomorphic",
    "universal",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.2.0",
    "koa-logger": "^2.0.1",
    "koa-static": "^3.0.0",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.1",
    "babel-preset-airbnb": "^2.2.3",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.2",
    "extract-text-webpack-plugin": "2.1.0",
    "flow-bin": "^0.42.0",
    "flow-typed": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "rimraf": "^2.6.1",
    "style-loader": "^0.14.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.2"
  }
}
