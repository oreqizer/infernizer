{
  "name": "infernizer",
  "version": "0.0.0",
  "description": "The ultimate inferno boilerplate!",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run clean && npm run build:server && run-p run run:dev",
    "test": "npm test",
    "run": "NODE_ENV=production node dist/server",
    "run:dev": "webpack-dev-server --config webpack.dev.js --inline --hot",
    "bundle": "npm run clean && npm run build:server && npm run build:client",
    "bundle:min": "npm run clean && npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:server": "webpack --config webpack.server.js && npm run clean:server",
    "build:client": "webpack",
    "raw:server": "tsc --outDir .tmp && babel .tmp --out-dir dist",
    "clean": "rimraf .tmp dist",
    "clean:server": "rimraf dist/server/index.css"
  },
  "keywords": [
    "inferno",
    "webpack",
    "isomorphic",
    "universal",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "@types/koa": "^2.0.38",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.21",
    "@types/koa-static": "^2.0.22",
    "@types/node": "^7.0.5",
    "inferno": "^1.3.0-rc.10",
    "inferno-server": "^1.3.0-rc.10",
    "koa": "^2.0.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.0",
    "koa-static": "^3.0.0",
    "normalize.css": "^5.0.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.6",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-inferno": "^1.9.0",
    "babel-preset-airbnb": "^2.2.3",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "cross-env": "^3.2.3",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "2.1.0",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^1.3.3",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.2",
    "ts-loader": "^2.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1"
  }
}
